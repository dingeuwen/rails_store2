<%= form_for(@review) do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% @review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div>Rating:
    <%= f.radio_button(:rating, 1) %>
    <%= f.label(:rating_one, "One (poor)") %>
    <%= f.radio_button(:rating, 2) %>
    <%= f.label(:rating_two, "Two") %>
    <%= f.radio_button(:rating, 3) %>
    <%= f.label(:rating_three, "Three") %>
    <%= f.radio_button(:rating, 4) %>
    <%= f.label(:rating_four, "Four") %>
    <%= f.radio_button(:rating, 5) %>
    <%= f.label(:rating_five, "Five (excellent)") %>
  </div>
  <div class="field">
    <% if @product %>
    <input type="hidden" name='review[product_id]' value='<%= @product.id %>'>
    <% else %>
    <select name="review[product_id]">
      <% Product.all.each do |doit| %>
      <option value="<%= doit.id %>">
        <%= doit.name %>
      </option>
      <% end %>
    <!--<%= f.label :product_id %><br />
    <%= f.number_field :product_id %>  changed some shit here, from f.number_field :product_id to @product.id -->
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

